<Window x:Class="JungleTracker.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True"
        ShowInTaskbar="False">
    <Grid>
        <Border x:Name="MainBorder" CornerRadius="10" Background="Transparent">
            <Image x:Name="DefaultPortrait" 
                   Width="46" 
                   Height="46" 
                   Margin="5" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Source="Assets/Champions/champions-altered-red/Darius.png">
                <Image.Effect>
                    <DropShadowEffect ShadowDepth="3" 
                                      Direction="315" 
                                      Opacity="0.6" 
                                      BlurRadius="5" 
                                      Color="Black"/>
                </Image.Effect>
            </Image>
        </Border>
    </Grid>
</Window>